        <Rectangle HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="5" Fill="#FFEF4958" Margin="0,80,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="5" Fill="#FFEF4958" Margin="595,80,0,0"/>
        <Rectangle HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="590" Fill="#FFEF4958" Margin="0,395,0,0"/>
        <Button Content="Обновить" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Width="230" Height="47" FontSize="16" BorderBrush="{x:Null}" Foreground="#FF0F1923" Background="#FFEF4958" Click="Button_Click_1" Style="{StaticResource Hatten}"/>

